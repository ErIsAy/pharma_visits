%h1 Listing visits

%table
  %thead
    %tr
      %th Note
      %th Date visit
      %th Planning
      %th User
      %th
      %th
      %th

  %tbody
    - @visits.each do |visit|
      %tr
        %td= visit.note
        %td= visit.date_visit
        %td= visit.planning
        %td= visit.user
        %td= link_to 'Show', visit
        %td= link_to 'Edit', edit_visit_path(visit)
        %td= link_to 'Destroy', visit, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br


        step: function(state, bar) {
          bar.path.setAttribute('stroke', state.color);
        }
      });
    
      // Number from 0.0 to 1.0, this act as a %
      bar1.animate(1.0);
      bar2.animate(1.0);
      bar3.animate(1.0);
      bar4.animate(1.0);
    
    
    });
